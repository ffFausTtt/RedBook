<Page x:Class="MDK0101Program.PageRed"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MDK0101Program"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageRed">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="79*"/>
            <RowDefinition Height="371*"/>
        </Grid.RowDefinitions>
        <Button x:Name="Back" Click="Back_Click" Grid.Row ="0" Content="Назад" />
        <StackPanel Grid.Row="1">
            <TextBox x:Name="Title_Book"  Text="{Binding Title_Book}"></TextBox>
            <ComboBox x:Name="CB"></ComboBox>
            <TextBox x:Name="Year" Text="{Binding Year}"></TextBox>
            <TextBox x:Name="Price" Text="{Binding Price}"></TextBox>
            <Button Content="Сохранить изменения" Click="Button_Click_1"></Button>
            <Button Content="Удалить книгу" Click="Button_Click_2"></Button>
        </StackPanel>
    </Grid>
</Page>
